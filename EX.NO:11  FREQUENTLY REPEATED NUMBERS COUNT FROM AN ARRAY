#include <stdio.h>
int main() {
    int a[50], n, i, j, count, maxCount = 0, freqNum;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter %d numbers:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &a[i]);
    for(i = 0; i < n; i++) {
        count = 1;
        for(j = i + 1; j < n; j++) {
            if(a[i] == a[j])
                count++;
        }
        if(count > maxCount) {
            maxCount = count;
            freqNum = a[i];
        }
    }
    printf("\nMost frequently repeated number: %d\n", freqNum);
    printf("It is repeated %d times\n", maxCount);
    return 0;
}
