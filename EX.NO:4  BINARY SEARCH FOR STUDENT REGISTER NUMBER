#include <stdio.h>
int main() {
    int reg[100], n, key, low, high, mid, found = 0, i;
    printf("Enter number of students: ");
    scanf("%d", &n);
    printf("Enter %d registration numbers (in sorted order):\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &reg[i]);
    printf("Enter registration number to search: ");
    scanf("%d", &key);
    low = 0;
    high = n - 1;
    while(low <= high) {
        mid = (low + high) / 2;
        if(reg[mid] == key) {
            found = 1;
            break;
        }
        else if(key < reg[mid])
            high = mid - 1;
        else
            low = mid + 1;
    }
    if(found == 1)
        printf("Registration number found at position %d\n", mid + 1);
    else
        printf("Registration number not found\n");
    return 0;
}
