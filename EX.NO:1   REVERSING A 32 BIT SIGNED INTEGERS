#include <stdio.h>
#include <limits.h>
int main() {
    int n, rev = 0, digit;
    printf("Enter a 32-bit signed integer: ");
    scanf("%d", &n);
    while (n != 0) {
        digit = n % 10;
        n = n / 10;
        if (rev > INT_MAX / 10 || rev < INT_MIN / 10) {
            printf("Overflow occurred! Cannot reverse.\n");
            return 0;
        }
        rev = rev * 10 + digit;
    }
    printf("Reversed Integer = %d\n", rev);
    return 0;
}

