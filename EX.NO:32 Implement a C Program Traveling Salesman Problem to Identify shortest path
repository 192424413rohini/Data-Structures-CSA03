#include <stdio.h>
#include <limits.h>

int n, cost[20][20], visited[20];
int minCost = INT_MAX;

void tsp(int city, int count, int currCost) {
    if (count == n && cost[city][0] > 0) {
        if (currCost + cost[city][0] < minCost)
            minCost = currCost + cost[city][0];
        return;
    }

    for (int i = 0; i < n; i++) {
        if (!visited[i] && cost[city][i] > 0) {
            visited[i] = 1;
            tsp(i, count + 1, currCost + cost[city][i]);
            visited[i] = 0;
        }
    }
}

int main() {
    printf("Enter number of cities: ");
    scanf("%d", &n);

    printf("Enter cost matrix:\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &cost[i][j]);

    visited[0] = 1;
    tsp(0, 1, 0);

    printf("\nMinimum TSP Cost = %d\n", minCost);
    return 0;
}
